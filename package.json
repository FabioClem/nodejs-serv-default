{
	"name": "crm",
	"version": "1.0.0",
	"description": "An API built with NodeJS, Express, MongoDB and TypeScript",
	"main": "dist/server.js",
	"scripts": {
		"test": "jest --verbose",
		"build": "tsc",
		"dev": "ts-node ./lib/server.ts",
		"start": "nodemon ./dist/server.js",
		"prod": "npm run build && npm run start"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"body-parser": "^1.18.3",
		"dotenv": "^6.0.0",
		"express": "^4.17.1",
		"mongoose": "^5.4.7",
		"nodemon": "^1.18.9",
		"ws": "^7.4.6"
	},
	"devDependencies": {
		"@types/express": "^4.17.0",
		"@types/jest": "^24.0.18",
		"@types/ws": "^6.0.2",
		"jest": "^24.9.0",
		"ts-jest": "^24.0.2",
		"typescript": "^3.5.3"
	},
	"jest": {
		"verbose": true,
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
